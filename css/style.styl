@import 'reset/reset.css'
@import '../bower_components/flex-grid/stylus/flexgrid'
@import '../bower_components/typographic/stylus/typographic'

$vertical-rhythm = false
$line-height-ratio = 1.25
$header-font-weight = 100
$header-font = 'proxima-nova', $helvetica
$body-font = 'proxima-nova', $helvetica
$min-font = 14px
$max-font = 16px
typographic()


h3
  line-height: 1.1em
  color: white

html
  overflow-y: hidden

body
  padding: 60px 15px 0


.masthead
  box()
  max-width: 980px
  margin: auto
  text-align: center
  div
    block(1/3)
    flex(masonry)
    padding: 30px
    background: dodgerblue
    color: white
    border-radius: 3px
    margin-bottom: 30px
    display: flex
    justify-content: center
    align-items: center
    &:first-child
      background: none
    p
      color: darken(dodgerblue, 50%)
      &:last-of-type
        margin-bottom: 0

.github
  img
    height: 45px

+below($min-width)
  .logo, .github
    order: -1


.grid
  padding: 30px 0
  div
    box()
    max-width: 980px
    margin: auto
    &:nth-of-type(1)
      figure
        block(1/12)
    &:nth-of-type(2)
      figure
        block(1/11)
    &:nth-of-type(3)
      figure
        block(1/10)
    &:nth-of-type(4)
      figure
        block(1/9)
    &:nth-of-type(5)
      figure
        block(1/8)
    &:nth-of-type(6)
      figure
        block(1/7)
    &:nth-of-type(7)
      figure
        block(1/6)
    &:nth-of-type(8)
      figure
        block(1/5)
    &:nth-of-type(9)
      figure
        block(1/4)
    &:nth-of-type(10)
      figure
        block(1/3)
    &:nth-of-type(11)
      figure
        block(1/2)
    &:nth-of-type(12)
      figure
        block(1/1)
  figure
    background: salmon
    color: white
    font-weight: bold
    border-radius: 3px
    padding: 5px
    text-align: center
    margin-bottom: 30px


.masonry
  margin-bottom: 30px
  div
    box()
    max-width: 980px
    margin: auto
  figure
    block(1/3)
    flex(masonry)
    margin-bottom: 30px
    padding: 10px
    background: springgreen
    border-radius: 3px
  img
    width: 100%
